<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainScreenActivity" >

    <TextView
        android:id="@+id/titleValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="@string/Loki_Title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/justAteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titleValue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:clickable="True"
        android:onClick="justAteButton"
        android:text="Just Ate" />

    <TextView
        android:id="@+id/wentOutsideButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/justAteButton"
        android:layout_alignLeft="@+id/justAteButton"
        android:layout_marginBottom="58dp"
        android:clickable="True"
        android:onClick="wentOutsideButton"
        android:text="Went Outside" />

    <TextView
        android:id="@+id/timerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:textSize="30sp"
        android:text="XX:XX:XX" />

</RelativeLayout>